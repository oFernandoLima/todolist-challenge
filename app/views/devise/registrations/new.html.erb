<% content_for :title, "Cadastrar" %>
<% content_for :center_screen, true %>

<div class="container d-flex align-items-center justify-content-center py-4">
  <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Cadastro</h2>

    <%= form_with(model: resource, url: user_registration_path, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Nome", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name",
              class: "form-control #{'is-invalid' if resource.errors[:name].present?}" %>
        <% resource.errors[:name].each do |msg| %>
          <div class="invalid-feedback d-block"><%= msg %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email",
              class: "form-control #{'is-invalid' if resource.errors[:email].present?}" %>
        <% resource.errors[:email].each do |msg| %>
          <div class="invalid-feedback d-block"><%= msg %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Senha", class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="text-muted d-block mb-1">(m√≠nimo <%= @minimum_password_length %> caracteres)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "form-control #{'is-invalid' if resource.errors[:password].present?}" %>
        <% resource.errors[:password].each do |msg| %>
          <div class="invalid-feedback d-block"><%= msg %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirme a senha", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].present?}" %>
        <% resource.errors[:password_confirmation].each do |msg| %>
          <div class="invalid-feedback d-block"><%= msg %></div>
        <% end %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Cadastrar", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

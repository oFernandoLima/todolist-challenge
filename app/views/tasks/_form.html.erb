<%= form_with(model: [@task_list, @task], local: true) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h6 class="alert-heading mb-2">Please fix the following <%= pluralize(@task.errors.count, "error") %>:</h6>
      <ul class="mb-0">
        <% @task.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Título", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição", class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Detalhes da tarefa (opcional)" %>
  </div>

  <div class="row g-3">
    <div class="col-md-4">
      <%= f.label :priority, "Prioridade", class: "form-label" %>
      <%= f.number_field :priority, in: 1..5, step: 1, class: "form-control", placeholder: "1..5" %>
    </div>
    <div class="col-md-4">
      <%= f.label :status, "Status", class: "form-label" %>
      <%= f.select :status, Task.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "form-select" %>
    </div>
  </div>

  <div class="d-flex gap-2 mt-3">
    <%= f.submit(@task.persisted? ? "Update task" : "Create task", class: "btn btn-primary") %>
    <%= link_to "Cancel", task_list_path(@task_list), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
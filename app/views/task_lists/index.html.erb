<% content_for :title, "Minhas Listas de Tarefas" %>

<div class="container py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">📋 Minhas Listas de Tarefas</h1>
    <div>
      <%= link_to "➕ Nova Lista", new_task_list_path, class: "btn btn-primary fw-semibold" %>
    </div>
  </div>

  <% owned_present = @task_lists.present? %>
  <% collab_present = @collaborated_task_lists.present? %>

  <% if owned_present %>
    <!-- Minhas listas -->
    <div class="row g-4 mb-4">
      <% @task_lists.each do |task_list| %>
        <div class="col-12 col-sm-6 col-lg-4">
          <%= render "task_lists/card", task_list: task_list, collaborated: false %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if collab_present %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="h5 mb-0">🤝 Listas em que colaboro</h2>
    </div>
    <div class="row g-4">
      <% @collaborated_task_lists.each do |task_list| %>
        <div class="col-12 col-sm-6 col-lg-4">
          <%= render "task_lists/card", task_list: task_list, collaborated: true %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% unless owned_present || collab_present %>
    <!-- Estado vazio -->
    <div class="bg-white border rounded-3 shadow-sm p-5 text-center">
      <div class="display-4 mb-3">📋</div>
      <h2 class="h4 mb-2">Nenhuma lista encontrada</h2>
      <p class="text-muted mb-4">Crie sua primeira lista de tarefas para começar a organizar seu trabalho!</p>
      <%= link_to "➕ Criar Primeira Lista", new_task_list_path, class: "btn btn-primary btn-lg fw-semibold btn-emoji" %>
    </div>
  <% end %>
</div>

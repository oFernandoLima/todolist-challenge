<% content_for :title, "Minhas Listas de Tarefas" %>

<div class="container py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">📋 Minhas Listas de Tarefas</h1>
    <div>
      <%= link_to "➕ Nova Lista", new_task_list_path, class: "btn btn-primary fw-semibold" %>
    </div>
  </div>

  <% if @task_lists.any? %>
    <div class="row g-4">
      <% @task_lists.each do |task_list| %>
        <% total = task_list.tasks.size %>
        <% done_count = task_list.tasks.select { |t| t.done? }.size %>
        <% pending_count = total - done_count %>
        <% completion = total.zero? ? 0 : ((done_count * 100.0) / total).round %>

        <div class="col-12 col-sm-6 col-lg-4">
          <div class="card h-100 shadow-sm" style="border-left: 0.25rem solid <%= task_list.color %>;">
            <div class="card-body">
              <!-- Header da Lista -->
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h3 class="h5 mb-0">
                  <%= link_to task_list.name, task_list_path(task_list), class: "text-decoration-none text-dark" %>
                </h3>
                <span class="badge text-bg-secondary"><%= total %> tarefas</span>
              </div>

              <!-- Cor da lista -->
              <!-- <div class="d-flex align-items-center gap-2 mb-3">
                <span class="rounded-circle d-inline-block" style="width: 14px; height: 14px; background-color: <%= task_list.color %>;"></span>
                <code class="text-muted"><%= task_list.color %></code>
              </div>  -->

              <!-- Estatísticas -->
              <div class="d-flex flex-wrap gap-2 my-3">
                <span class="badge text-bg-success">✅ <%= done_count %> concluídas</span>
                <span class="badge text-bg-warning text-white">⏳ <%= pending_count %> pendentes</span>
              </div>

              <!-- Barra de Progresso -->
              
                <div class="progress mb-2" role="progressbar" aria-valuenow="<%= completion %>" aria-valuemin="0" aria-valuemax="100">
                  <div class="progress-bar bg-success" style="width: <%= completion %>%;">
                    <%= completion %>%
                  </div>
                </div>
                <div class="text-center text-muted small">
                  <%= completion %>% concluída
                </div>
              
            </div>

            <!-- Ações -->
            <div class="card-footer bg-white border-0 pt-0 pb-3">
              <div class="d-flex justify-content-end gap-2">
                <%= link_to "👁️ Ver", task_list_path(task_list), class: "btn btn-sm btn-info text-white" %>
                <%= link_to "✏️ Editar", edit_task_list_path(task_list), class: "btn btn-sm btn-warning text-white" %>
                <%= button_to "🗑️ Excluir", task_list_path(task_list),
                      method: :delete,
                      form: { data: { turbo_confirm: "Tem certeza?" }, class: "d-inline" },
                      class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Estado vazio -->
    <div class="bg-white border rounded-3 shadow-sm p-5 text-center">
      <div class="display-4 mb-3">📋</div>
      <h2 class="h4 mb-2">Nenhuma lista encontrada</h2>
      <p class="text-muted mb-4">Crie sua primeira lista de tarefas para começar a organizar seu trabalho!</p>
      <%= link_to "➕ Criar Primeira Lista", new_task_list_path, class: "btn btn-primary btn-lg fw-semibold" %>
    </div>
  <% end %>
</div>
